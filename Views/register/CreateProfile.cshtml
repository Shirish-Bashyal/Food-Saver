
@using Waste_Food_Management.Models

@model RegisterModel
@{

    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<head>
     <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
</head>
<div class="box11">
        <h2>Create an account</h2>
        <p>Set up your account.</p>

       <div class="data">
         <form asp-action="CreateProfile">
            <div class="data-01">
            <label asp-for="Email">
            <input asp-for="Email"type="email" placeholder="Email" required>
            </label>
            </div>


             <div class="data-04">
            <label asp-for="FullName">
            <input asp-for="FullName"type="text" placeholder="FullName" required>
            </label>
            </div>

             <div class="data-05">
            <label asp-for="Address">
            <input asp-for="Address"type="text" placeholder="Address" required>
            </label>
            </div>


             <div class="data-06">
            <label asp-for="PhoneNumber">
            <input asp-for="PhoneNumber"type="string" placeholder="PhoneNumber" required>
            </label>
            </div>


            <div class="data-02">
             <label asp-for="Password" >
                   <input asp-for="Password" placeholder="Password"type="password" required>
                 </label>
           </div>
           <div class="data-03">
            <label >
            <input type="password" id="C-Password" placeholder=" Confirm Password">
             </label>
             </div>
                 <div class="data-04">
                   <label asp-for="Role" class="choose" >Choose a role:</label>

                    <select name="roles" id="roles">
                        <!-- <option value="roles"></option> -->
                      <option value="Seller">Seller</option>
                      <option value="Buyer">Buyer</option>

                    </select>
                   </div>

                <div class="buttondata">
                    <label >
                    <button type="submit">Sign Up</button>
                    </label>
                </div>
        </form>
      </div>
       <!-- </div> -->
 </div>